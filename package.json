{
  "name": "ai-interviewer",
  "version": "0.1.0",
  "private": true,
  "description": "GRC Advisory AI Interview Tool - Multi-cloud AI-powered interview system",
  "scripts": {
    "dev": "pnpm --filter web dev",
    "dev:backend": "pnpm --filter backend dev",
    "build": "pnpm -r build",
    "test": "pnpm -r test",
    "lint": "pnpm -r lint",
    "format": "prettier --write \"**/*.{ts,tsx,js,jsx,json,md}\"",
    "clean": "pnpm -r clean && rimraf node_modules"
  },
  "devDependencies": {
    "prettier": "^3.2.5",
    "rimraf": "^5.0.5",
    "typescript": "^5.3.3"
  },
  "engines": {
    "node": ">=20.0.0",
    "pnpm": ">=8.0.0"
  }
}
